<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <!-- Set the background color of the button -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the radius as per your desired roundness -->
            <solid android:color="#1A000000" /> <!-- Replace with your desired background color -->
        </shape>
    </item>

    <!-- Set the image drawable for the button -->
    <item android:drawable="@drawable/red_rectangle" />

</ripple>