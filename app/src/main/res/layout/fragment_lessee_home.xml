<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08000000">

    <TextView
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="center"
        android:text="Home"
        android:textColor="#22215B"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/WelcomeLessee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Home"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="Welcome, Lessee"
        android:textColor="#22215B"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!-- Grid buttons -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/WelcomeLessee"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:backgroundTint="#69F16F"
                android:drawableTop="@drawable/outline_signpost_24"
                android:paddingTop="30dp"
                android:text="View listed properties"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:iconTint="#000000"
                app:rippleColor="#CFCFCF"

                android:elevation="10dp"
                android:translationZ="2dp"
                android:stateListAnimator="@null"/>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:backgroundTint="#F4B860"
                android:drawableTop="@drawable/outline_chat_24"
                android:paddingTop="30dp"
                android:text="Send your concerns"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="15dp"
                app:iconTint="#000000"
                app:rippleColor="#CFCFCF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="-20dp">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/outline_account_balance_wallet_24"
                android:paddingTop="30dp"
                android:text="Check Payment history"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="15dp"
                app:iconTint="#000000"
                app:rippleColor="#CFCFCF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>





</RelativeLayout>