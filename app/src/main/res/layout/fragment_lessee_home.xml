<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08000000">

    <TextView
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="center"
        android:text="Home"
        android:textColor="#22215B"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/WelcomeLessee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Home"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="Welcome, Lessee"
        android:textColor="#22215B"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/horizontalButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WelcomeLessee"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ViewProperty"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:background="@drawable/green_rectangle_ripple"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="View Property"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="15dp"
            app:iconTint="#000000"
            app:rippleColor="#CFCFCF" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Concerns"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:background="@drawable/red_rectangle_ripple"
            android:gravity="left"
            android:paddingTop="20dp"
            android:text="Send your concerns"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="15dp"
            app:rippleColor="#000000" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Payment_History"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@id/horizontalButtons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:drawableTop="@drawable/wallet"
        android:paddingTop="30dp"
        android:text="Check Payment history"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15sp"
        app:cornerRadius="15dp"
        app:iconTint="#000000" />

</RelativeLayout>