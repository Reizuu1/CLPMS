            <ImageView
                android:id="@+id/pin1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="242dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/propertyName1"
                android:layout_width="173.2dp"
                android:layout_height="33.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="152dp"
                android:text="San Jose Montalban
                        Commercial Property"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leasePrice1"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="191dp"
                android:text="₱ 2,500 per month"
                android:textColor="@color/purple_500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/propertyStatus1"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="214dp"
                android:text="Leased"
                android:textColor="#F44336"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/propertyLocation1"
                android:layout_width="161.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="240dp"
                android:text="San Jose, Montalban"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewProperty2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <View
                android:id="@+id/propertyBackground2"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/white_card" />

            <ImageView
                android:id="@+id/propertyImage2"
                android:layout_width="156dp"
                android:layout_height="134dp"
                android:layout_marginTop="@dimen/_5sdp"
