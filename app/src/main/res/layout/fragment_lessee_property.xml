                android:src="@drawable/property3" />

            <ImageView
                android:id="@+id/pin2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="242dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/propertyName2"
                android:layout_width="173.2dp"
                android:layout_height="33.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="152dp"
                android:text="Geronimo Near Plaza
                        Commercial Property"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leasePrice2"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="191dp"
                android:text="₱ 5,000 per month"
                android:textColor="@color/purple_500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/propertyStatus2"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
