<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_background">

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="Browse Property"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:columnCount="2"
        android:rowCount="1">

        <RelativeLayout
            android:id="@+id/viewProperty"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <View
                android:id="@+id/propertyBackground"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/white_card" />

            <ImageView
                android:id="@+id/propertyImage"
                android:layout_width="156dp"
                android:layout_height="134dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/property1" />

            <ImageView
                android:id="@+id/pin"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="242dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/propertyName"
                android:layout_width="173.2dp"
                android:layout_height="33.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="152dp"
                android:text="Casa Carmelita
                        Commercial Property"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leasePrice"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="191dp"
                android:text="₱ 7,000 per month"
                android:textColor="@color/purple_500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/propertyStatus"
                android:layout_width="173.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="214dp"
                android:text="Leased"
                android:textColor="#F44336"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/propertyLocation"
                android:layout_width="161.2dp"
                android:layout_height="18.2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="240dp"
                android:text="San Jose, Montalban"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewProperty1"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <View
