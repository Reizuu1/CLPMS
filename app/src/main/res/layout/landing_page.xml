<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C12020"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/house"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Image Description"
        android:scaleType="centerCrop"
        android:src="@drawable/house" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/house"

        android:layout_marginStart="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="Welcome to"
        android:textColor="#22215B"
        android:textSize="35dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/leasing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Welcome"
        android:layout_marginStart="50dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="Leasing"
        android:textColor="#22215B"
        android:textSize="50dp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/Find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leasing"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="Find the tenant, list your property in just a simple steps, in your hand."
        android:textColor="#7B7F9E"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/one_step_away"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Find"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-15dp"
        android:gravity="left"
        android:text="You are one step away."
        android:textColor="#7B7F9E"
        android:textSize="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_lessee"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/one_step_away"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#567DF4"
        android:textColor="#FFFFFF"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:onClick="goToLogin"/>


</RelativeLayout>