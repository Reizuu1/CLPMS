<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessee_payment">

    <TextView
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-15dp"
        android:gravity="center"
        android:text="Payment"
        android:textColor="#22215B"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Home"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pay__1_"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center_vertical"
            android:text="Send Payment"
            android:textColor="#1A1E25"
            android:textSize="18dp"
            android:shadowColor="#808080"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <TextView
            android:id="@+id/textview_payment_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/payment_history_icon"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center_vertical"
            android:text="Payment History"
            android:textColor="#1A1E25"
            android:textSize="18dp"
            android:shadowColor="#808080"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>


        <View
            android:id="@+id/bottom_line"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:layout_below="@id/account_email"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#0D000000"
            android:layout_centerHorizontal="true"/>



    </LinearLayout>

</RelativeLayout>